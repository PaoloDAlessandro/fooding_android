<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/spinnerItemImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/fooding_color"
        tools:src="@drawable/calendar_expiration_date_v2"
        android:contentDescription="@string/filter_icon_alt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"
        android:alpha="0.4"
        android:background="#FF909090"
        app:layout_constraintTop_toBottomOf="@id/spinnerItemImage" />


</androidx.constraintlayout.widget.ConstraintLayout>
